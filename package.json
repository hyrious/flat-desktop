{
    "private": true,
    "main": "dist/index.js",
    "scripts": {
        "dev": "concurrently --kill-others -n=main,render -c=green,blue \"yarn dev:main\" \"yarn dev:render\"",
        "dev:main": "esbuild --bundle src/main/index.ts --outdir=dist --minify --sourcemap --external:electron && electron .",
        "dev:render": "vite -l error",
        "build": "run-p build:*",
        "build:main": "",
        "build:render": "vite build"
    },
    "dependencies": {
        "react": "^17.0.1",
        "react-dom": "^17.0.1"
    },
    "devDependencies": {
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "@vitejs/plugin-react-refresh": "^1.1.1",
        "better-typescript-lib": "^1.0.1",
        "concurrently": "^5.3.0",
        "electron": "latest",
        "esbuild": "^0.8.31",
        "npm-run-all": "^4.1.5",
        "ts-node-dev": "^1.1.1",
        "typescript": "^4.1.3",
        "vite": "^2.0.0-beta.21"
    }
}
