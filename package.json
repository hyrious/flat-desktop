{
    "private": true,
    "main": "dist/index.js",
    "scripts": {
        "preinstall": "node scripts/update-npmrc.js",
        "dev": "concurrently --kill-others -n=main,render -c=green,blue \"yarn dev:main\" \"yarn dev:render\"",
        "dev:main": "yarn build:main && wait-on http://localhost:3000 && electron .",
        "dev:render": "vite -l error",
        "build": "run-p build:*",
        "build:main": "esbuild --bundle src/main/index.ts --outdir=dist --minify --sourcemap --external:electron",
        "build:render": "vite build",
        "build:scripts": "esbuild scripts/src/update-npmrc.ts --platform=node --bundle --minify --outfile=scripts/update-npmrc.js"
    },
    "dependencies": {
        "agora-electron-sdk": "education290",
        "react": "^17.0.1",
        "react-dom": "^17.0.1"
    },
    "devDependencies": {
        "@types/lodash": "^4.14.167",
        "@types/minimist": "^1.2.1",
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "@vitejs/plugin-react-refresh": "^1.1.1",
        "better-typescript-lib": "^1.0.1",
        "concurrently": "^5.3.0",
        "electron": "7.1.4",
        "esbuild": "^0.8.31",
        "lodash": "^4.17.20",
        "minimist": "^1.2.5",
        "npm-run-all": "^4.1.5",
        "ts-node-dev": "^1.1.1",
        "typescript": "^4.1.3",
        "vite": "^2.0.0-beta.26",
        "wait-on": "^5.2.1"
    }
}
